<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:id="@+id/llsu"
    android:orientation="vertical"
    tools:context="com.example.internship.Signup"  xmlns:app="http://schemas.android.com/apk/res/com.example.internship">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        style="@style/formLinearlayout" >
        <EditText
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
            android:id="@+id/su_username"
            style="@style/formEdittext"
            android:hint="@string/username"
            android:background="@drawable/drawable_rounded"
            android:drawableRight="@drawable/ic_action_person"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        style="@style/formLinearlayout" >
        <EditText
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
            android:id="@+id/su_contact"
             style="@style/formEdittext"
            android:hint="Mobile No."
            android:background="@drawable/drawable_rounded"
            android:drawableRight="@drawable/ic_action_phone"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        style="@style/formLinearlayout" >
        <EditText
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
            android:id="@+id/su_pwd"
             style="@style/formEdittext"
            android:hint="@string/password"
            android:background="@drawable/drawable_rounded"
            android:drawableRight="@drawable/ic_action_accounts"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        style="@style/formLinearlayout" >
        <EditText
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
            android:id="@+id/su_confirmpwd"
            style="@style/formEdittext"
            android:hint="@string/password1"
            android:background="@drawable/drawable_rounded"
            android:drawableRight="@drawable/ic_action_accounts"
            android:inputType="textPassword" />
	</LinearLayout>

    <Button
        android:id="@+id/btn_register"
         style="@style/formButton"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/drawable_shape"
        android:text="@string/register" />

</LinearLayout><!-- From: file:/C:/Users/DELL/Desktop/Workspace/ProgressedInternshipApp/app/src/main/res/layout/signup.xml -->